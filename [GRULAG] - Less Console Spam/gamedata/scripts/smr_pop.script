local random = math.random
local table_insert = table.insert

local function insert_n_times(t, item, n)
    local n = n or 1
    for i = 1, n do
        table_insert(t, item)
    end
end


local function array_flip(t)
    local result = {}
    for k, v in pairs(t) do
        result[v] = k
    end
    return result
end

